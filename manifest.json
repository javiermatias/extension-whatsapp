{
  "manifest_version": 3,
  "name": "SMS SENDER",
  "version": "1.1",
  "description": "Sends a message to a list of numbers.",
  "permissions": [
    "activeTab",   
    "storage"
  ],
  "options_page": "data.html",
  "host_permissions": ["https://messages.google.com/*",
  "https://ausentismos.online/*"],
  "action": {
    "default_popup": "popup.html",    
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://messages.google.com/web/*"],
      "js": ["content.js"]
    }
  ]

}
